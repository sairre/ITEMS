#include <iostream>
#include <istream>
std::istream & fun(std::istream & in)
{
	int v;
	while(in>>v,!in.eof())
	{
		if(in.bad())
		{
		//	throw_runtime_error("IO streamline error");
			std::cout<<"IO streamline error"<<std::endl;
		}
		if(in.fail())
		{
			std::cout<<"data error,try again"<<std::endl;
			in.clear();
			in.ignore(100,'\n');
			continue;
		}
		std::cout<<v<<std::endl;

	}
	in.clear();
	return in;
}
int main(void)
{
	std::cout<<"input some intergers"<<std::endl;
	fun(std::cin);	

}
